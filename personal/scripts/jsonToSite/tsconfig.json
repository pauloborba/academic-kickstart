{
  "compilerOptions": {
        "target": "es2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": ["es2015"],
        "sourceMap": true,
        "module": "ES2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
  },
  "include": ["."], // Adjust this path to include all your TypeScript files
  "exclude": ["node_modules", "**/*.spec.ts"]
}
